{
  "manifest_version": 3,
  "name": "SpringMode for KAI",
  "version": "1.0",
  "description": "Добавляет кнопку для переключения на весенний режим",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://kai.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}